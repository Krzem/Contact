    <td><%=h kontakty.phone %></td>
    <td><%= link_to 'Pokaż', kontakty %></td>
    <td><%= link_to 'Edytuj', edit_kontakty_path(kontakty) %></td>
    <td><%= link_to 'Usuń', kontakty, :confirm => 'Czy na pewno usunąć?', :method => :delete %></td>
