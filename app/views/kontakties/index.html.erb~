  <tr>
    <td><%= gravatar_image_tag(kontakty.email, :alt => kontakty.name + " " + kontakty.surname, :gravatar => { :size => 15 }) %></td>
    <td><%=h kontakty.name %></td>
    <td><%=h kontakty.surname %></td>
    <td><%=h kontakty.email %></td>
